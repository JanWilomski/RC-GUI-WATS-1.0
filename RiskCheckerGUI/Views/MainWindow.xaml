<Window x:Class="RiskCheckerGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiskCheckerGUI.Views"
        mc:Ignorable="d"
        Title="Risk Checker GUI" Height="600" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Messages">
                <local:MessagesView/>
            </TabItem>
            <TabItem Header="Settings">
                <TextBlock Text="Settings Content" />
            </TabItem>
            <TabItem Header="Filters">
                <TextBlock Text="Filters Content" />
            </TabItem>
            <TabItem Header="Instruments">
                <TextBlock Text="Instruments Content" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>